.container{
	width:100%;
	padding:0;
}
.slide{
	width:100%;
	height:400rpx;
}
.slide swiper{
	height:400rpx;
}

.slide swiper-item image{
	height:100%;
	width:100%;
}
/*列表项*/
.board{
display:flex;
flex-direction:column;
width:100%;
padding:30rpx;
}
.board .board-item{
	flex:1;
	padding:30rpx;
	border:1px solid #eee;
	margin:20rpx;
	display:flex;
	cursor:pointer;
}
.board .board-item text{
	flex:1;
}
.board .board-item image{
	width:40rpx;
	height:40rpx;
}
